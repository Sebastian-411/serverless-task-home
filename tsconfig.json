{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "baseUrl": ".",
    "paths": {
      "@/core/*": ["core/*"],
      "@/api/*": ["api/*"],
      "@/tests/*": ["tests/*"]
    },
    "declaration": false,
    "declarationMap": false,
    "sourceMap": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "api/**/*",
    "core/**/*",
    "tests/**/*",
    "prisma/**/*",
    "swagger/**/*"
  ],
  "exclude": [
    "node_modules",
    ".vercel",
    "coverage",
    "lib/generated",
    "dist",
    "build"
  ]
}
